CASE() {
  case $1 in
    1) ## Nginx service failed and not running
       systemctl restart nginx
       netstat -lntp | grep nginx
       if [ $? -ne 0 ]; then
         systemctl status -l nginx
         ## something to fill
          echo -e "\n\e[1;33m Following are the errors \e[0m\n"
          grep 'nginx\[' /var/log/messages
      fi
    ;;
  esac
}
