SOLUTION() {
   case $1 in
     100)
        echo "DNS record is not working"
        echo "Check if your domain is properly configured or not in https://dnschecker.org "
        echo "Check if your DNS record is been showing in in https://dnschecker.org or not"

        exit 1
        ;;
     200)
       echo "Ensure you change the file ${TC}/etc/mongod.conf${N} file and change the listen address from 127.0.0.1 to 0.0.0.0"
       echo "Then save the file, Restart service using ${TC}systemctl restart mongod${N}"
       echo "Check the status using ${TC}nestat -lntp${N}"
       exit 1
        ;;
   esac
}

